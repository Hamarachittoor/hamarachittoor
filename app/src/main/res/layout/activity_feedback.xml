<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hp.mvghamarachitoor.feedback">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="monospace"
        android:text="Feedback"
        android:textAppearance="?android:attr/textAppearanceLarge"

        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_above="@+id/C3"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="35dp" />

    <TextView
        android:id="@+id/E3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name:"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_above="@+id/E4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="80dp" />

    <EditText
        android:id="@+id/C3"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:hint="Enter name"
        android:inputType="textCapWords"
        android:layout_alignTop="@+id/E3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/E4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mobile Number:"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/C4"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:hint="Enter number"
        android:inputType="number"
        android:layout_alignTop="@+id/E4"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />



    <EditText
        android:id="@+id/C5"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:hint="Enter message"
        android:inputType="textCapWords"
        android:layout_below="@+id/C4"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="76dp" />



    <Button
        android:id="@+id/Q1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffff"
        android:onClick="onClick"
        android:background="@drawable/button"
        android:text="Submit"
        android:layout_alignParentBottom="true" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Message"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_alignBottom="@+id/C5" />


</RelativeLayout>
