<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    xmlns:app="http://schemas.android.com/apk/res-auto"

    tools:context="com.example.hp.mvghamarachitoor.Main2Activity"
    android:id="@+id/drawer_layout">


<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="OUR SERVICES"
        android:layout_marginTop="40dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="30dp" />

    <Button
        android:id="@+id/B1"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@drawable/button"
        android:onClick="onB1Click"
        android:textColor="#ffffff"
        android:text="Rent your house / Find a house" />

    <Button
        android:id="@+id/B2"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/button"
        android:onClick="onB2Click"
        android:textColor="#ffffff"
        android:text="Event Management" />

    <Button
        android:id="@+id/B3"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/B2"
        android:layout_below="@+id/B2"
        android:layout_marginTop="35dp"
        android:background="@drawable/button"
        android:elevation="8dp"
        android:onClick="onB3Click"
        android:text="Startup Assistance"
        android:textColor="#ffffff" />
</RelativeLayout>
    <android.support.design.widget.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:menu="@menu/nav_menu"
        android:layout_gravity="start"
        android:id="@+id/nav_view"
        ></android.support.design.widget.NavigationView>
</android.support.v4.widget.DrawerLayout>
