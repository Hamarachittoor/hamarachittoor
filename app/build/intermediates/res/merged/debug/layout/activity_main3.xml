<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.hp.mvghamarachitoor.Main3Activity">

    <Button
        android:id="@+id/V1"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:onClick="onClickV1"
        android:textColor="#ffffff"
        android:background="@drawable/button"
        android:text="Find a house"
        android:layout_marginBottom="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/R1"
        android:layout_alignStart="@+id/R1" />

    <Button
        android:id="@+id/R1"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:onClick="onR1Click"
        android:textColor="#ffffff"
        android:background="@drawable/button"
        android:text="Rent your house"
        android:layout_marginBottom="43dp"
        android:layout_above="@+id/imageView2"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/ic_home_black_24dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@mipmap/mag_lens_1"
        android:layout_marginBottom="34dp"
        android:layout_above="@+id/V1"
        android:layout_alignLeft="@+id/imageView"
        android:layout_alignStart="@+id/imageView" />

</RelativeLayout>
